<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.korisnik.lnapp2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AbLisaActivity"
            android:label="@string/about_lisa"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity
            android:name=".ResultsActivity"
            android:label="@string/results"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".SponsorsActivity"
            android:label="@string/sponsors"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".SocialActivity"
            android:label="@string/social"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/contact"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/News"
            android:parentActivityName=".MainActivity">
        </activity>

    </application>

</manifest>